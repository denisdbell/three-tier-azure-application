{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "webAppName": { "type": "string", "defaultValue": "[concat('nginx-front-', uniqueString(resourceGroup().id))]" },
    "appAppName": { "type": "string", "defaultValue": "[concat('pet-app-', uniqueString(resourceGroup().id))]" },
    "dbAdminLogin": { "type": "string", "defaultValue": "petadmin" },
    "dbAdminPassword": { "type": "securestring" },
    "vnetName": { "type": "string", "defaultValue": "PetClinic-VNet" }
  },
  "variables": {
    "appServicePlanName": "PetClinic-ASP",
    "dbServerName": "[concat('pet-db-', uniqueString(resourceGroup().id))]",
    "dnsZoneName": "[concat(variables('dbServerName'), '.private.postgres.database.azure.com')]"
  },
  "resources": [
    /* DNS INFRASTRUCTURE FOR TIER 3 */
    {
      "type": "Microsoft.Network/privateDnsZones",
      "apiVersion": "2020-06-01",
      "name": "[variables('dnsZoneName')]",
      "location": "global"
    },
    {
      "type": "Microsoft.Network/privateDnsZones/virtualNetworkLinks",
      "apiVersion": "2020-06-01",
      "name": "[concat(variables('dnsZoneName'), '/link')]",
      "location": "global",
      "dependsOn": [ "[resourceId('Microsoft.Network/privateDnsZones', variables('dnsZoneName'))]" ],
      "properties": {
        "registrationEnabled": false,
        "virtualNetwork": { "id": "[resourceId('Microsoft.Network/virtualNetworks', parameters('vnetName'))]" }
      }
    },
    /* SHARED APP SERVICE PLAN */
    {
      "type": "Microsoft.Web/serverfarms",
      "apiVersion": "2022-09-01",
      "name": "[variables('appServicePlanName')]",
      "location": "[resourceGroup().location]",
      "sku": { "name": "B1", "tier": "Basic" },
      "kind": "linux",
      "properties": { "reserved": true }
    },
    /* TIER 1: NGINX WEB APP */
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('webAppName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [ "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]" ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "DOCKER|nginx:latest"
        },
        "virtualNetworkSubnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'Web-Subnet')]"
      }
    },
    /* TIER 2: JAVA PETCLINIC APP SERVICE */
    {
      "type": "Microsoft.Web/sites",
      "apiVersion": "2022-09-01",
      "name": "[parameters('appAppName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [ "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]" ],
      "properties": {
        "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', variables('appServicePlanName'))]",
        "siteConfig": {
          "linuxFxVersion": "JAVA|17-java17",
          "appSettings": [
            { "name": "SPRING_DATASOURCE_URL", "value": "[concat('jdbc:postgresql://', variables('dbServerName'), '.postgres.database.azure.com:5432/petclinic')]" },
            { "name": "SPRING_DATASOURCE_USERNAME", "value": "[parameters('dbAdminLogin')]" },
            { "name": "SPRING_DATASOURCE_PASSWORD", "value": "[parameters('dbAdminPassword')]" }
          ],
          "ipSecurityRestrictions": [
            {
              "name": "Allow-Tier1-Subnet",
              "action": "Allow",
              "priority": 100,
              "vnetSubnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'Web-Subnet')]"
            }
          ]
        },
        "virtualNetworkSubnetId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'App-Subnet')]"
      }
    },
    /* TIER 3: MANAGED POSTGRES (FIXED WITH DNS) */
    {
      "type": "Microsoft.DBforPostgreSQL/flexibleServers",
      "apiVersion": "2022-12-01",
      "name": "[variables('dbServerName')]",
      "location": "[resourceGroup().location]",
      "dependsOn": [
        "[resourceId('Microsoft.Network/privateDnsZones/virtualNetworkLinks', variables('dnsZoneName'), 'link')]"
      ],
      "sku": { "name": "Standard_B1ms", "tier": "Burstable" },
      "properties": {
        "administratorLogin": "[parameters('dbAdminLogin')]",
        "administratorLoginPassword": "[parameters('dbAdminPassword')]",
        "version": "14",
        "storage": { 
          "storageSizeGB": 64 
        },
        "network": {
          "delegatedSubnetResourceId": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('vnetName'), 'Data-Subnet')]",
          "privateDnsZoneArmResourceId": "[resourceId('Microsoft.Network/privateDnsZones', variables('dnsZoneName'))]"
        }
      }
    }
  ]
}
